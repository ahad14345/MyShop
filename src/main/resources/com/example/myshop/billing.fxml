<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox spacing="20.0" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myshop.BillingController">
    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>

    <VBox spacing="15.0" HBox.hgrow="ALWAYS">
        <Label text="New Transaction" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;" />

        <VBox spacing="8">
            <Label text="Search Product Inventory" style="-fx-font-weight: bold; -fx-text-fill: #555;" />
            <TextField fx:id="searchField" prefHeight="40.0" promptText="Type product name to search..." style="-fx-background-radius: 5;" />
        </VBox>

        <ListView fx:id="searchResultsList" VBox.vgrow="ALWAYS" style="-fx-background-radius: 5; -fx-font-family: 'Monospaced';" />

        <HBox spacing="15" alignment="CENTER_LEFT">
            <VBox spacing="5">
                <Label text="Quantity" style="-fx-font-size: 11;" />
                <TextField fx:id="quantityField" prefHeight="40.0" prefWidth="80.0" text="1" alignment="CENTER" style="-fx-background-radius: 5;" />
            </VBox>
            <Button onAction="#handleAddToCart" prefHeight="50.0" prefWidth="200.0"
                    style="-fx-background-color: #198754; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;" text="ADD TO CART" />

            <Button onAction="#handleClearSearch" text="Clear Search" prefHeight="50.0" style="-fx-background-radius: 5; -fx-cursor: hand;" />
        </HBox>
    </VBox>

    <VBox prefWidth="420.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-border-color: #dee2e6; -fx-padding: 20; -fx-background-radius: 10; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">

        <Label text="Current Invoice" style="-fx-font-size: 18; -fx-font-weight: bold;" />

        <TextField fx:id="customerNameField" prefHeight="35.0" promptText="Customer Name (Optional)" style="-fx-background-radius: 5;" />

        <TableView fx:id="cartTable" VBox.vgrow="ALWAYS" style="-fx-background-radius: 5;">
            <columns>
                <TableColumn fx:id="colItem" text="Item Name" prefWidth="160" />
                <TableColumn fx:id="colQty" text="Qty" prefWidth="60" />
                <TableColumn fx:id="colPrice" text="Unit" prefWidth="80" />
                <TableColumn fx:id="colTotal" text="Total" prefWidth="80" />
            </columns>
            <placeholder>
                <Label text="Cart is empty. Add products to start." />
            </placeholder>
        </TableView>

        <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5;">
            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Label text="Grand Total:" style="-fx-font-size: 16;" />
                <Label fx:id="totalLabel" text="\$0.00" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #0D6EFD;" />
            </HBox>
        </VBox>

        <HBox spacing="10">
            <Button onAction="#handleRemoveItem" text="Remove Item" prefHeight="45.0" HBox.hgrow="ALWAYS" maxWidth="Infinity"
                    style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" />

            <Button onAction="#handleGenerateBill" text="COMPLETE SALE" prefHeight="45.0" HBox.hgrow="ALWAYS" maxWidth="Infinity"
                    style="-fx-background-color: #0D6EFD; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;" />
        </HBox>
    </VBox>
</HBox>