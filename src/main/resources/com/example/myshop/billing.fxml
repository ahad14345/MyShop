<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox spacing="20.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myshop.BillingController">
    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>

    <VBox spacing="15.0" HBox.hgrow="ALWAYS">
        <Label text="Point of Sale" style="-fx-font-size: 22; -fx-font-weight: bold;" />

        <VBox spacing="5">
            <Label text="Search Product Name" style="-fx-text-fill: #666;" />
            <TextField fx:id="searchField" prefHeight="40.0" promptText="Start typing to search..." />
        </VBox>

        <ListView fx:id="searchResultsList" VBox.vgrow="ALWAYS" prefHeight="200.0" />

        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="quantityField" prefHeight="40.0" prefWidth="100.0" promptText="Qty" text="1" />
            <Button onAction="#handleAddToCart" prefHeight="40.0" prefWidth="150.0"
                    style="-fx-background-color: #198754; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Add to Cart" />
        </HBox>
    </VBox>

    <VBox prefWidth="380.0" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-padding: 20; -fx-background-radius: 5; -fx-border-radius: 5;">
        <Label text="Current Invoice" style="-fx-font-size: 18; -fx-font-weight: bold;" />

        <TableView fx:id="cartTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colItem" text="Item" prefWidth="120" />
                <TableColumn fx:id="colQty" text="Qty" prefWidth="50" />
                <TableColumn fx:id="colPrice" text="Price" prefWidth="70" />
                <TableColumn fx:id="colTotal" text="Total" prefWidth="80" /> </columns>
        </TableView>

        <Separator />

        <VBox spacing="5">
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label text="Total:" style="-fx-font-size: 20; -fx-font-weight: bold;" />
                <Label fx:id="totalLabel" text="\$0.00" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #0D6EFD;" />
            </HBox>
        </VBox>

        <Button maxWidth="Infinity" onAction="#handleGenerateBill" prefHeight="50.0"
                style="-fx-background-color: #0D6EFD; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="COMPLETE SALE" />
    </VBox>
</HBox>