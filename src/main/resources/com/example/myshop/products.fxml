<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
    <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Product Management" />

    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Search products..." prefWidth="300"/>
        <Button text="Add New Product" style="-fx-background-color: #0D6EFD; -fx-text-fill: white;" />
    </HBox>

    <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="ID" prefWidth="50" />
            <TableColumn text="Product Name" prefWidth="250" />
            <TableColumn text="Category" prefWidth="150" />
            <TableColumn text="Price" prefWidth="100" />
            <TableColumn text="Stock" prefWidth="100" />
        </columns>
    </TableView>
</VBox>