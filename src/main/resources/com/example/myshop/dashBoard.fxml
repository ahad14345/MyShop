<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myshop.DashboardController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="65.0" spacing="20.0" style="-fx-background-color: #0D6EFD;">
            <children>
                <Label text="MyShop" textFill="WHITE" style="-fx-font-weight: bold; -fx-font-size: 22;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Logged in as owner" textFill="WHITE" />
                <Button onAction="#handleLogout" style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Logout" />
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </HBox>
    </top>

    <left>
        <VBox prefWidth="220.0" spacing="8.0" style="-fx-background-color: #F8F9FA; -fx-border-color: #DEE2E6; -fx-border-width: 0 1 0 0;">
            <padding>
                <Insets left="10.0" right="10.0" top="20.0" />
            </padding>
            <children>
                <Button fx:id="btnDashboard" alignment="BASELINE_LEFT" maxWidth="Infinity" onAction="#showDashboard" prefHeight="45.0" text="Dashboard" />
                <Button fx:id="btnProducts" alignment="BASELINE_LEFT" maxWidth="Infinity" onAction="#showProducts" prefHeight="45.0" text="Products" />
                <Button fx:id="btnBilling" alignment="BASELINE_LEFT" maxWidth="Infinity" onAction="#showBilling" prefHeight="45.0" text="Billing" />
                <Button fx:id="btnBills" alignment="BASELINE_LEFT" maxWidth="Infinity" onAction="#showBills" prefHeight="45.0" text="Bills" />
                <Button fx:id="btnSettings" alignment="BASELINE_LEFT" maxWidth="Infinity" onAction="#showSettings" prefHeight="45.0" text="Settings" />
            </children>
        </VBox>
    </left>

    <center>
    </center>
</BorderPane>